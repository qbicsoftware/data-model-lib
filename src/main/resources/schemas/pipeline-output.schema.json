{
    "$schema": "http://json-schema.org/schema#",
    "$id": "http://qbic.life/v1/pipeline_output.json",
    "title": "Pipeline Output",
    "description": "Describes the structure of output files generated by pipelines",
    "type": "object",
    "definitions": {
        "folder": {
            "description": "Describes a folder",
            "type": "object",
            "required": [
                "name",
                "path",
                "children"
            ],
            "properties": {
                "name": {
                    "description": "Folder name",
                    "type": "string",
                    "minLength": 1
                },
                "path": {
                    "description": "relative folderpath",
                    "type": "string",
                    "minLength": 1
                },
                "children": {
                    "description": "Describes files and/or sub-folders if existent",
                    "type": "array",
                    "items": {
                        "oneOf": [
                            {
                                "$ref": "#/definitions/folder"
                            },
                            {
                                "$ref": "#/definitions/file"
                            }
                        ]
                    }
                }
            }
        },
        "file": {
            "description": "Describes a file",
            "type": "object",
            "required": [
                "name",
                "path",
                "file_type"
            ],
            "properties": {
                "name": {
                    "type": "string",
                    "minLength": 1
                },
                "path": {
                    "type": "string",
                    "minLength": 1
                },
                "file_type": {
                    "type": "string",
                    "minLength": 1
                }
            }
        },
        "qc_folder": {
            "description": "folder containing the multiqc results",
            "allOf": [
                {
                    "$ref": "#/definitions/folder"
                },
                {
                    "properties": {
                        "name": {
                            "pattern": "multiqc"
                        }
                    }
                }
            ]
        },
        "pipeline_report_file": {
            "allOf": [
                {
                    "$ref": "#/definitions/file"
                },
                {
                    "properties": {
                        "file_type": {
                            "pattern": "pipeline_report.txt"
                        }
                    }
                }
            ]
        },
        "execution_trace_file": {
            "allOf": [
                {
                    "$ref": "#/definitions/file"
                },
                {
                    "properties": {
                        "file_type": {
                            "pattern": "execution_trace.txt"
                        }
                    }
                }
            ]
        },
        "software_versions_file": {
            "allOf": [
                {
                    "$ref": "#/definitions/file"
                },
                {
                    "properties": {
                        "file_type": {
                            "pattern": "software_versions.csv"
                        }
                    }
                }
            ]
        },
        "pipeline_info_folder": {
            "allOf": [
                {
                    "$ref": "#/definitions/folder"
                },
                {
                    "properties": {
                        "name": {
                            "pattern": "pipeline_info"
                        },
                        "children": {
                            "items": {
                                "anyOf": [
                                    {
                                        "$ref": "#/definitions/pipeline_report_file"
                                    },
                                    {
                                        "$ref": "#/definitions/execution_trace_file"
                                    },
                                    {
                                        "$ref": "#/definitions/software_versions_file"
                                    }
                                ]
                            }
                        }
                    }
                }
            ]
        },
        "results_subfolder": {
            "description": "Subfolder containing specific results of a tool or process",
            "allOf": [
                {
                    "$ref": "#/definitions/folder"
                },
                {
                    "properties": {
                        "children": {
                            "items": {
                                "anyOf": [
                                    {
                                        "$ref": "#/definitions/folder"
                                    },
                                    {
                                        "$ref": "#/definitions/file"
                                    }
                                ]
                            }
                        }
                    }
                }
            ]
        },
        "results_folder": {
            "description": "Pipeline results folder at top level of hierarchy",
            "allOf": [
                {
                    "$ref": "#/definitions/folder"
                },
                {
                    "properties": {
                        "name": {
                            "type": "string"
                        },
                        "children": {
                            "items": {
                                "anyOf": [
                                    {
                                        "$ref": "#/definitions/pipeline_info_folder"
                                    },
                                    {
                                        "$ref": "#/definitions/qc_folder"
                                    },
                                    {
                                        "$ref": "#/definitions/results_subfolder"
                                    }
                                ]
                            }
                        }
                    }
                }
            ]
        }
    }
}