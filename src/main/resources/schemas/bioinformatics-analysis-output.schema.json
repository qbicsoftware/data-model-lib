{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "bioinformatics-analysis-output.schema.json",
  "title": "Structure of nf-core analysis results.",
  "description": "Describes the structural composition of nf-core analysis result data sets.",
  "definitions": {
    "dataFolder": {
      "description": "Describes a common data folder",
      "type": "object",
      "required": [
        "name",
        "path",
        "children"
      ],
      "properties": {
        "name": {
          "description": "The folder name",
          "type": "string",
          "minLength": 1
        },
        "path": {
          "description": "The path of the folder",
          "type": "string",
          "minLength": 1
        },
        "children": {
          "description": "Describes files and/or sub-folders if existent",
          "type": "array",
          "items": {
            "oneOf": [
              {
                "$ref": "#/definitions/dataFolder"
              },
              {
                "$ref": "#/definitions/dataFile"
              }
            ]
          }
        }
      }
    },
    "dataFile": {
      "description": "Describes a common data file",
      "type": "object",
      "required": [
        "name",
        "path",
        "fileType"
      ],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "path": {
          "type": "string",
          "minLength": 1
        },
        "fileType": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "pipelineInformation": {
      "description": "Information about the software versions, the analysis run and general execution report.",
      "allOf": [
        {
          "$ref": "data-structure-commons.json#/definitions/dataFolder"
        }
      ]
    }
  },
  "type": "object",

  "properties": {
    "pipelineInformation": {"$ref": "#/definitions/pipelineInformation"}
  },
  "required": [
    "pipelineInformation"
  ]
}
